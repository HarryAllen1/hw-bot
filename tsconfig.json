{
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "./src",
		"outDir": "dist",
		"module": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"checkJs": true,
		"downlevelIteration": true,
		"importsNotUsedAsValues": "error",
		"experimentalDecorators": true,
		"paths": {
			"#lib/*": ["lib/*"],
			"#utils/*": ["lib/utils/*"]
		}
	},
	"include": ["src"]
}
